<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.adm.HomeAdmFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="25dp"
                android:text="Serviços"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="horizontal">
                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                    android:textStyle="bold"
               android:layout_weight="1"
                android:text="Valor: "
                />
                <TextView
                    android:id="@+id/valor_servicos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#800000"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd"
                    android:text="R$ 1500,00"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Custo: "
                    />
                <TextView
                    android:id="@+id/custo_servico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#800000"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd"
                    android:text="R$ 500,00"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Lucro: "
                    />
                <TextView
                    android:id="@+id/lucro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#800000"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd"
                    android:text="R$ 500,00"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Porcentagem do lucro sobre o valor total de todos os serviços"
                android:textSize="15dp"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:textStyle="bold"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >

                <ProgressBar
                    android:id="@+id/progressCompleted"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="@color/colorAccent"
                    android:foregroundTint="@color/colorAccent"
                    android:indeterminateTint="@color/colorAccent"
                    android:progress="10"
                    android:progressBackgroundTint="@color/colorAccent"
                    android:progressTint="@color/corBotaoVemerlho"
                    android:scaleY="5"
                    android:secondaryProgressTint="@color/colorAccent"
                    app:layout_constraintEnd_toStartOf="@+id/porcentagem"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/porcentagem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:text="70%"
                    android:textAlignment="viewEnd"
                    android:textColor="#800000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_height="2dp"
                android:layout_width="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:background="#000000" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="25dp"
                android:text="Produtos"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:text="Valor: "
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/valor_produtos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#800000"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd"
                    android:text="R$ 1500,00"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:text="Custo: "
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/custo_produtos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#800000"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd"
                    android:text="R$ 500,00"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Lucro: "
                    />
                <TextView
                    android:id="@+id/lucro_produtos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#800000"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd"

                    android:text="R$ 500,00"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Porcentagem do lucro sobre o valor total de todos os produtos"
                android:textSize="15dp"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:textStyle="bold"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="150dp"
                >

                <ProgressBar
                    android:id="@+id/progressProdutos"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="@color/colorAccent"
                    android:foregroundTint="@color/colorAccent"
                    android:indeterminateTint="@color/colorAccent"
                    android:progress="10"
                    android:progressBackgroundTint="@color/colorAccent"
                    android:progressTint="@color/corBotaoVemerlho"
                    android:scaleY="5"
                    android:secondaryProgressTint="@color/colorAccent"
                    app:layout_constraintEnd_toStartOf="@+id/porcentagem_produto"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/porcentagem_produto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:text="70%"
                    android:textAlignment="viewEnd"
                    android:textColor="#800000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>