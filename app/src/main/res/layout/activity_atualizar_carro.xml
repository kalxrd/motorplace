<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.AtualizarCarroActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txt_placa_carro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:backgroundTint="#000000"
                android:drawableLeft="@drawable/ic_placa"
                android:drawablePadding="@dimen/espaco_ic"
                android:ems="10"
                android:hint="Placa"
                android:inputType="textPersonName"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/txt_modelo_carro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/componentes_cadastro"
                android:backgroundTint="#000000"
                android:drawableLeft="@drawable/ic_carro"
                android:drawablePadding="@dimen/espaco_ic"
                android:ems="10"
                android:hint="Modelo"
                android:inputType="textPersonName"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/txt_marca_carro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/componentes_cadastro"
                android:backgroundTint="#000000"
                android:drawableLeft="@drawable/ic_marca"
                android:drawablePadding="@dimen/espaco_ic"
                android:ems="10"
                android:hint="Marca"
                android:inputType="textPersonName"
                android:textColorHint="#090909" />

            <EditText
                android:id="@+id/txt_ano_carro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/componentes_cadastro"
                android:backgroundTint="#000000"
                android:drawableLeft="@drawable/ic_baseline_date_range_24"
                android:drawablePadding="@dimen/espaco_ic"
                android:ems="10"
                android:hint="Ano"
                android:inputType="numberSigned"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/txt_cor_carro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/componentes_cadastro"
                android:backgroundTint="#000000"
                android:drawableLeft="@drawable/ic_cor"
                android:drawablePadding="@dimen/espaco_ic"
                android:ems="10"
                android:hint="Cor"
                android:inputType="textPersonName"
                android:textColorHint="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/componentes_cadastro"
                android:drawablePadding="6dp"
                android:drawableLeft="@drawable/ic_tamanho"
                android:text="Tamanho"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinner_tamanho_carro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:ems="10"
                android:hint="Tamanho"
                android:inputType="textPersonName"
                android:textColorHint="#000000" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="14dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="60dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancelar_carro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_radius"
                android:text="Cancelar"
                android:textAllCaps="false"
                android:textColor="#C21500"
                android:textSize="18sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_salvar_carrro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/shape"
                android:text="Salvar"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>