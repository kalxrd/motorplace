<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.motorplace">
    <!-- permissoes para uso dos recursos da camera e galeria -->
    <uses-feature
        android:name="android.hardware.camera2"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activitys.EditarPromocaoActivity" android:parentActivityName=".activitys.HomeAdmActivity"></activity>
        <activity
            android:name=".activitys.CadastroPromocaoActivity"
            android:parentActivityName=".activitys.HomeAdmActivity" />
        <activity
            android:name=".activitys.EditarProdutoAdmActivity"
            android:parentActivityName=".activitys.HomeAdmActivity" />
        <activity
            android:name=".activitys.ServicoActivity"
            android:parentActivityName=".activitys.HomeAdmActivity" />
        <activity
            android:name=".activitys.EditarServicoAdmActivity"
            android:parentActivityName=".activitys.HomeAdmActivity" />
        <activity
            android:name=".activitys.CadastrarProdutoActivity"
            android:parentActivityName=".activitys.HomeAdmActivity" />
        <activity
            android:name=".activitys.CadastroServicoActivity"
            android:parentActivityName=".activitys.HomeAdmActivity" />
        <activity
            android:name=".activitys.AtualizarCarroActivity"
            android:parentActivityName=".activitys.TelaHomeCliente" />
        <activity
            android:name=".activitys.AtualizarDadosActivity"
            android:parentActivityName=".activitys.TelaHomeCliente" />
        <activity
            android:name=".activitys.TelaRecuperarSenha"
            android:parentActivityName=".activitys.TelaDeLogin" />
        <activity
            android:name=".activitys.TelaHomeCliente"
            android:theme="@style/appbar" />
        <activity
            android:name=".activitys.HomeAdmActivity"
            android:theme="@style/appbar" />
        <activity
            android:name=".activitys.TelaCadastroUsuario"
            android:parentActivityName=".activitys.TelaDeEntradaActivity" />
        <activity
            android:name=".activitys.TelaDeLogin"
            android:parentActivityName=".activitys.TelaDeEntradaActivity" />
        <activity android:name=".activitys.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activitys.TelaDeEntradaActivity" />
    </application>

</manifest>